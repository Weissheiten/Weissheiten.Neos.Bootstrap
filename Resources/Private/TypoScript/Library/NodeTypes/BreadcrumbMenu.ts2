// alter the prototype of breadcrumb to apply the changes to each breadcrumb used
prototype(Weissheiten.Neos.Bootstrap:BreadcrumbMenu) < prototype(TYPO3.Neos:BreadcrumbMenu){
    // this template is basically the same as in the NodeTypes package and only uses ol instead of ul like suggeested in the Bootstrap docs
    templatePath = 'resource://Weissheiten.Neos.Bootstrap/Private/Templates/NodeTypes/Breadcrumb.html'
    sectionName = 'breadcrumb'
    // overwrite active attribute to reflect the bootstrap class
    current.attributes.class = 'active'
}